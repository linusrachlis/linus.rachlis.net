/* ==========================================================================
   Author's custom styles
   ========================================================================== */

html { height: 100%; }
body {
    height: 100%;
    background: #222;
}
nav {
    height: 100%;
}
@media (min-aspect-ratio: 2033/1475) {
    nav img.bg {
        height: 100%;
        max-height: 1475px;
    }
}
@media (max-aspect-ratio: 2033/1475) {
    nav img.bg {
        width: 100%;
        max-width: 2033px;
    }
}

nav img.shift {
    width: ;
}

nav ul {
    position: absolute;
    margin: 0;
    padding: 0;
}
nav ul li {
    position: absolute;
    margin: 0;
    padding: 0;
}
nav ul li a {
    display: block;
    width: 100%;
    height: 100%;
    overflow: hidden;
    text-indent: -9999em;
    background: top left no-repeat;
    background-size: contain;
    opacity: 0;
    transition: opacity 1s;
}

nav ul.untouched li a {
    animation: pulse-mouseoff alternate infinite;
    -webkit-animation: pulse-mouseoff alternate infinite;
}
nav ul.untouched li:nth-child(1) a {
    animation-delay: 0.5s;
    -webkit-animation-delay: 0.5s;
    animation-duration: 0.8s;
    -webkit-animation-duration: 0.8s;
}
nav ul.untouched li:nth-child(2) a {
    animation-delay: 1s;
    -webkit-animation-delay: 1s;
    animation-duration: 1s;
    -webkit-animation-duration: 1s;
}
nav ul.untouched li:nth-child(3) a {
    animation-delay: 1.5s;
    -webkit-animation-delay: 1.5s;
    animation-duration: 1.2s;
    -webkit-animation-duration: 1.2s;
}
nav ul.untouched li:nth-child(4) a {
    animation-delay: 2s;
    -webkit-animation-delay: 2s;
    animation-duration: 1.4s;
    -webkit-animation-duration: 1.4s;
}

nav ul li a:hover {
    animation: none;
    -webkit-animation: none;
    opacity: 1;
    transition: opacity 500ms;
}

nav ul li.resume {
    left: 24.495%;
    top: 54.101%;
    width: 16.182%;
    height: 18.033%;
}
nav ul li.resume a {
    background-image: url(../img/light-r.jpg);
}
nav ul li.poetry {
    left: 63.0103%;
    top: 38.2373%;
    width: 14.36301%;
    height: 14.101695%;
}
nav ul li.poetry a {
    background-image: url(../img/light-p.jpg);
}



/* Animations */

@keyframes pulse-mouseoff {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 0.4;
    }
}
@-webkit-keyframes pulse-mouseoff {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 0.4;
    }
}






